<Page x:Class="DeskPowerApp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:DeskPowerApp.Views"     
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:DeskPowerApp.ViewModels"
      xmlns:model="using:DeskPowerApp.Model"
     
      mc:Ignorable="d">
    
     <!-- Give the view model context-->
    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">   
      
        <!-- Page responsive setting-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <!--   <Setter Target="stateTextBox.Text" Value="Narrow Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <!--    <Setter Target="stateTextBox.Text" Value="Normal Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <!--  <Setter Target="stateTextBox.Text" Value="Wide Visual State" /> -->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Page Header-->
        <controls:PageHeader x:Name="pageHeader" 
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True" 
                             Text="Desk Power"
                             FontSize="20"                 
                             Background="#FF6BB61C"
                                                          
                             >
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton Icon="Find" Label="Save" Foreground="#fff"/>
                
            </controls:PageHeader.PrimaryCommands>
             <controls:PageHeader.Content>
                <AutoSuggestBox PlaceholderText="Search" QueryIcon="Find" Width="250"
                                BorderThickness="0"
                                BorderBrush="red"
                TextChanged="AutoSuggestBox_TextChanged"
                QuerySubmitted="AutoSuggestBox_QuerySubmitted"                              
                SuggestionChosen="AutoSuggestBox_SuggestionChosen" FocusVisualPrimaryThickness="0"/>
            </controls:PageHeader.Content>
            
            <!--  secondary commands  -->
            <controls:PageHeader.SecondaryCommands>
                <AppBarButton Click="{x:Bind ViewModel.GotoSettings}" Label="Settings" />
                <AppBarButton Click="{x:Bind ViewModel.GotoPrivacy}" Label="Privacy" />
                <AppBarButton Click="{x:Bind ViewModel.GotoAbout}" Label="About" />
                <!-- Search Button-->
            </controls:PageHeader.SecondaryCommands>
        </controls:PageHeader>

        <!-- PAGE START -->
       
            <!--Grid view start-->
        <Grid  RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True" >
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
          
                <!--Backgroud Head Image-->
                <Grid Grid.Row="0" 
                      Grid.RowSpan="1"
                      Margin="0,48,0,0"                      
                      Height="260">
               
                <Image 
                    Name="BigImage"
                    Stretch="UniformToFill" 
                    Source="ms-appx:///Assets/img/BGJournalist.png" 
                    Height="260"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True" Margin="0,0,0,20" />
                </Grid>
      
            <GridView Grid.Row="1"                       
                      Margin="0,0,0,0"  
                      Grid.RowSpan="2"
                      Name="SoundGridView"
                      IsItemClickEnabled="True"                     
                      RelativePanel.Below="BigImage"                      
                      ItemsSource="{Binding Drafts}" SelectionChanged="SoundGridView_SelectionChanged">
                

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="model:Draft">
                        
                        <StackPanel 
                            Orientation="Vertical"                                            
                            Background="#000"                                              
                            Margin="20,0,20,20"                              
                            HorizontalAlignment="Center"                             
                            CornerRadius="5">
                            <HyperlinkButton         
                                
                                Click="GotoDetailsPage"
                                HorizontalAlignment="Center">
                                <StackPanel Padding="0">
                                    <Image 
                                           Stretch="UniformToFill" 
                                           Width="320"
                                           Height="240"                                            
                                           Margin="0,0,0,0"
                                           Source="{Binding DraftImage }">
                                    </Image>
                                </StackPanel>
                            </HyperlinkButton>
                            <!-- Date and category-->
                            <StackPanel       
                                            Orientation="Horizontal"    
                                            Name="categoryBox"                                 
                                            Padding="5" >
                                <TextBlock 
                                            Width="150" 
                                            Foreground="white"     
                                            HorizontalAlignment="Left"
                                            Height="Auto" 
                                            FontSize="10"
                                            Text="{Binding DraftCategory }">
                                </TextBlock>
                                                        
                                          
                                <TextBlock 
                                            Width="150" 
                                            HorizontalAlignment="Right"
                                            Foreground="white"                                    
                                            Height="Auto" 
                                            FontSize="10"
                                            Text="{Binding DraftCreatedDate }">
                                </TextBlock>
                            </StackPanel>

                            <StackPanel 
                                        Background="Orange" 
                                        Padding="10">
                                <TextBlock  
                                            Width="300" 
                                            Height="30" 
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="#FFF"
                                            Text="{Binding DrafTitle }">
                                </TextBlock>
                            </StackPanel>

                            <StackPanel 
                                        Background="#f9f9f9" 
                                        Padding="10">
                                <TextBlock  
                                            Name="content"
                                            Width="300" 
                                            Height="60" 
                                            VerticalAlignment="Center"
                                            TextWrapping="Wrap"                                              
                                            Text="{Binding DraftContent }">

                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>          
    </Grid>
</Page>
